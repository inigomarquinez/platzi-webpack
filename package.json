{
  "name": "platzi-webpack",
  "version": "1.0.0",
  "description": "Webpack course @ Platzi",
  "main": "index.js",
  "scripts": {
    "build": "webpack --entry ./index.js --output ./bundle.js --mode development",
    "build:local": "webpack --mode production",
    "build:external": "webpack --config ./02_external/webpack.config.js",
    "build:multi": "webpack --config ./03_multi-entry-points/webpack.config.js",
    "build:css": "webpack --config ./04_css-style-loader/webpack.config.js",
    "build:plugins": "webpack --config ./05_plugins/webpack.config.js",
    "build:dev": "webpack-dev-server --config ./06_webpack-dev-server/webpack.config.js",
    "build:dev:hot": "webpack-dev-server --config ./07_hot-module-replacement/webpack.config.js",
    "build:babel": "webpack-dev-server --config ./08_babel/webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inigomarquinez/platzi-webpack.git"
  },
  "keywords": [
    "webpack",
    "platzi"
  ],
  "author": "Íñigo Marquínez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inigomarquinez/platzi-webpack/issues"
  },
  "homepage": "https://github.com/inigomarquinez/platzi-webpack#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/preset-env": "7.4.5",
    "babel-loader": "8.0.6",
    "css-loader": "^2.1.1",
    "html-webpack-plugin": "3.2.0",
    "mini-css-extract-plugin": "0.7.0",
    "style-loader": "^0.23.1",
    "webpack": "4.32.2",
    "webpack-cli": "3.3.2",
    "webpack-dev-server": "3.5.1"
  }
}
